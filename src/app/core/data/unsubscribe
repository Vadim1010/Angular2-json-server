 1
import {Subscription} from "rxjs";

private testSubscribe:Subscription;

this.testSubscribe = this.route.paramMap
      .switchMap((params: ParamMap)=>this.dataService.getById(+params.get('id')))
      .subscribe((movie)=> this.itemDescription = movie, (error)=>this.router.navigate(['/404']));

ngOnDestroy() {
    this.testSubscribe.unsubscribe();
  }
 ---------------
 2
 import {Subject} from "rxjs";

 private ngUnsubscribe: Subject<void> = new Subject<void>();

 this.route.paramMap
       .switchMap((params: ParamMap)=>this.dataService.getById(+params.get('id')))
       .subscribe((movie)=> this.itemDescription = movie, (error)=>this.router.navigate(['/404']));


  ngOnDestroy() {
    this.ngUnsubscribe.next();
    this.ngUnsubscribe.complete();
  }
